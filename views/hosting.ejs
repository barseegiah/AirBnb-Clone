<%- include("partial/home_header") %>

  <main class="container-fluid">

    <div class="container-fluid mt-2">
      <div class="tab-container">
        <ul class="nav nav-tabs flex-nowrap">
          <li class="nav-item">
            <a class="nav-link active fw-bold" onclick="openTab(event, 'Tab1')"><i class="fa-solid fa-gem"
                style="color: #ffffff;"></i>&nbsp;Places Hosted</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-bold" onclick="openTab(event, 'Tab2')"><i class="fa-solid fa-building"
                style="color: #FFF;"></i>&nbsp;Host a Place</a>
          </li>
        </ul>
      </div>

      <div class="tab-content mt-4">
        <!-- Listing of Places -->

        <!-- Mix place listing -->
        <div class="container-fluid m-0 tab-pane fade show active p-0" id="Tab1">
          Content for Tab 1
        </div>

        <div id="Tab2" class="tab-pane fade text-black">
          <div class="hosting-section container-fluid">
            <div class="row">
              <div class="col text-center d-flex flex-column
              justify-content-center text-center">
                <h3 class="lodgeliberia_textcolor_color text-center fw-bold" id="hostlogo">
                  Host your property 
                  <br> with LodgeLiberia
                </h3>
                <div class="container-fluid mt-2 d-sm-none">
                  <button class="lodgeliberia_background_color btn text-black fw-bold">Start your hosting..</button>
                </div>
                

              </div>
              <div class="col b-danger d-none d-lg-block">
                <!-- Hosting Form -->
                <form action="/submit-property" method="POST" class="step-form">

                  <!-- Step 1: Basic Information -->
                  <div class="step">
                    <h3 class="lodgeliberia_textcolor_color fw-bold">Property Basic Information</h3>
                    <div class="mb-3">
                      <label for="propertyName" class="form-label text-black fw-bold">Property Name</label>
                      <input type="text" class="form-control" id="propertyName" name="propertyName" required
                        placeholder="Property Name">
                    </div>

                    <div class="mb-3">
                      <label for="formFile" class="form-label">Default file input example</label>
                      <input class="form-control" type="file" id="formFile">
                    </div>
                    <div class="mb-3">
                      <label for="formFileMultiple" class="form-label">Multiple files input example</label>
                      <input class="form-control" type="file" id="formFileMultiple" multiple>
                    </div>


                    <div class="mb-3">
                      <label for="propertyType" class="form-label text-black fw-bold">Property Type</label>
                      <select class="form-select form-control" id="propertyType" name="propertyType" required>
                        <option value="">Select property type</option>
                        <option value="apartment">Apartment</option>
                        <option value="house">House</option>
                        <option value="room">Room</option>
                        <option value="guesthouse">Guesthouse</option>
                      </select>
                    </div>
                    <button type="button"
                      class="btn next-step lodgeliberia_background_color text-black fw-bold w-50">Next</button>
                  </div>

                  <!-- Step 2: Location Information -->
                  <div class="step">
                    <h3 class="lodgeliberia_textcolor_color fw-bold">Location Information</h3>
                    <div class="mb-3">
                      <label for="address" class="form-label text-black fw-bold">Address</label>
                      <input type="text" class="form-control" id="address" name="address" required>
                    </div>
                    <div class="mb-3">
                      <label for="city" class="form-label text-black fw-bold">City</label>
                      <input type="text" class="form-control" id="city" name="city" required>
                    </div>
                    <div class="mb-3">
                      <label for="zipcode" class="form-label text-black fw-bold">Zip Code</label>
                      <input type="text" class="form-control" id="zipcode" name="zipcode" required>
                    </div>
                    <button type="button" class="btn prev-step lodgeliberia_background_color text-black fw-bold">Previous</button>
                    <button type="button" class="btn next-step lodgeliberia_background_color text-black fw-bold">Next</button>
                  </div>

                  <!-- Step 3: Pricing Information -->
                  <div class="step">
                    <h3 class="lodgeliberia_textcolor_color fw-bold">Pricing Information</h3>
                    <div class="mb-3">
                      <label for="price" class="form-label text fw-bold">Price per Night</label>
                      <input type="number" class="form-control" id="price" name="price" required>
                    </div>
                    <div class="mb-3">
                      <label for="currency" class="form-label text fw-bold">Currency</label>
                      <select class="form-select form-control" id="currency" name="currency" required>
                        <option value="">Select currency</option>
                        <option value="usd" selected>USD</option>
                      </select>
                    </div>
                    <button type="button" class="btn prev-step lodgeliberia_background_color text-black fw-bold">Previous</button>
                    <button type="button" class="btn next-step lodgeliberia_background_color text-black fw-bold">Next</button>
                  </div>

                  <!-- Step 4: Additional Information -->
                  <div class="step">
                    <h3>Additional Information</h3>
                    <div class="mb-3">
                      <label for="description" class="form-label">Description</label>
                      <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                      <label for="amenities" class="form-label">Amenities</label>
                      <input type="text" class="form-control" id="amenities" name="amenities"
                        placeholder="e.g. WiFi, Parking" required>
                    </div>
                    <button type="button" class="btn btn-secondary prev-step">Previous</button>
                    <button type="button" class="btn btn-primary next-step">Next</button>
                  </div>

                  <!-- Step 5: Confirmation -->
                  <div class="step">
                    <h3>Confirmation</h3>
                    <p>Please review your details before submitting:</p>
                    <ul>
                      <li>Property Name: <span id="reviewPropertyName"></span></li>
                      <li>Property Type: <span id="reviewPropertyType"></span></li>
                      <li>Address: <span id="reviewAddress"></span></li>
                      <li>City: <span id="reviewCity"></span></li>
                      <li>Zip Code: <span id="reviewZipcode"></span></li>
                      <li>Price per Night: <span id="reviewPrice"></span></li>
                      <li>Currency: <span id="reviewCurrency"></span></li>
                      <li>Description: <span id="reviewDescription"></span></li>
                      <li>Amenities: <span id="reviewAmenities"></span></li>
                    </ul>
                    <button type="button" class="btn btn-secondary prev-step">Previous</button>
                    <button type="submit" class="btn btn-primary">Submit Property</button>
                  </div>

                </form>

              </div>
            </div>
          </div>

        </div>
      </div>
  </main>
  <%- include("partial/home_footer") %>