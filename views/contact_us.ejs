<%- include("partial/home_header") %>

<div class="container">
    <div class="contact-container">
        <h2>Contact Us</h2>
        <form action="/submit-contact-form" method="POST">
            <div class="form-group mb-3">
                <label for="name">Full Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group mb-3">
                <label for="email">Email Address:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group mb-3">
                <label for="phone">Phone Number:</label>
                <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="form-group mb-3">
                <label for="message">Message:</label>
                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn-submit">Send Message</button>
        </form>

        <div class="contact-info mt-5">
            <h4>Our Contact Information:</h4>
            <p><strong>Phone:</strong> +231 77 123 4567</p>
            <p><strong>Email:</strong> contact@lodgeliberia.com</p>
            <p><strong>Address:</strong> Lodge Liberia Headquarters, Monrovia, Liberia</p>
        </div>
    </div>
</div>

<%- include("partial/home_footer") %>